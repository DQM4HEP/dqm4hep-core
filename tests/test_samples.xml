<?xml version="1.0" ?>
<dqm4hep>
    <constants>
      <constant name="GaussiansDirectory">/Gaussians</constant>
    </constants>

    <!-- MeanWithinExpectedTest qtests -->
    <qtests>

      <qtest type="MeanWithinExpectedTest" name="MeanAround10Long" error="0.3" warning="0.9">
        <parameter name="ExpectedMean" value="10"/>
        <parameter name="MeanDeviationLower" value="8"/>
        <parameter name="MeanDeviationUpper" value="12"/>
	<parameter name="Properties"> Mean </parameter>
      </qtest>

      <qtest type="MeanWithinExpectedTest" name="MeanBelow12">
        <parameter name="MeanDeviationUpper" value="12" />
	<parameter name="Properties"> Mean </parameter>
      </qtest>

      <qtest type="MeanWithinExpectedTest" name="MeanAbove8">
        <parameter name="MeanDeviationLower" value="8" />
	<parameter name="Properties"> Mean </parameter>
      </qtest>

      <qtest type="MeanWithinExpectedTest" name="Mean90Around10Short">
        <parameter name="ExpectedMean" value="10"/>
        <parameter name="MeanDeviationLower" value="9.5"/>
        <parameter name="MeanDeviationUpper" value="10.5"/>
	<parameter name="Properties"> Mean </parameter>
	<parameter name="Percentage"> 90 </parameter>
      </qtest>

      <qtest type="MeanWithinExpectedTest" name="MeanAround15Short">
        <parameter name="ExpectedMean" value="15"/>
        <parameter name="MeanDeviationLower" value="14.5"/>
        <parameter name="MeanDeviationUpper" value="15.5"/>
	<parameter name="Properties"> Mean </parameter>
      </qtest>

      <qtest type="MeanWithinExpectedTest" name="RMSAround2Long">
        <parameter name="ExpectedMean" value="2"/>
        <parameter name="MeanDeviationLower" value="0"/>
        <parameter name="MeanDeviationUpper" value="4"/>
	<parameter name="Properties"> RMS </parameter>
      </qtest>

      <qtest type="MeanWithinExpectedTest" name="MedianAround10Long">
        <parameter name="ExpectedMean" value="10"/>
        <parameter name="MeanDeviationLower" value="8"/>
        <parameter name="MeanDeviationUpper" value="12"/>
	<parameter name="Properties"> Median </parameter>
      </qtest>

      <qtest type="MeanWithinExpectedTest" name="MedianAround10Short" error="0.5" warning="0.75">
        <parameter name="ExpectedMean" value="10"/>
        <parameter name="MeanDeviationLower" value="9"/>
        <parameter name="MeanDeviationUpper" value="11"/>
	<parameter name="Properties"> Median  </parameter>
      </qtest>

    </qtests>

    <!-- All monitor elements and qtests to process -->
    <monitorElements>
      <file name="test_samples.root">
        <fileElement path="${GaussiansDirectory}" name="Gaus_Mean10_RMS2">
          <qtest name="MeanAround10Long" />
	  <qtest name="Mean90Around10Short" />
	  <qtest name="RMSAround2Long" />
	  <qtest name="MedianAround10Short" />
	  <qtest name="MeanAbove8" />
	  <qtest name="MeanBelow12" />
        </fileElement>
        <fileElement path="${GaussiansDirectory}" name="Gaus_Mean10_RMS2_bck">
          <qtest name="MeanAround10Short" />
        </fileElement>
        <fileElement path="${GaussiansDirectory}" name="DblGaus_Mean15_RMS2_RMS5">
          <qtest name="MeanAround15Short" />
        </fileElement>
	<fileElement path="${GaussiansDirectory}" name="Gaus_Mean8_RMS2">
	  <qtest name="MedianAround10Short" />
	</fileElement>
      </file>
    </monitorElements>

</dqm4hep>
